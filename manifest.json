{
  "name": "Thumbnail Preview",
  "description": "Preview thumbnail and title of Tiktok and Youtube videos by hovering over the link.",
  "version": "0.1.2",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "exclude_matches": [
        "https://*.youtube.com/*",
        "https://*.tiktok.com/*"
      ],
      "runAt": "document_idle",
      "js": [
        "contentScript.js"
      ],
      "css": [
        "hover.css"
      ]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}